#main
	padding 0 0 90px
	position relative
	background-color: #04050B
	background-image: url(../img/backs/main.jpg)
	background-repeat: no-repeat
	background-position: center
	background-size cover
	color #fff
	@media screen and (max-width 991px)
		padding 0 0 50px
	@media screen and (max-width 767px)
		text-align center
	@media screen and (max-width 560px)
		padding 0 0 30px
.main
	&-pre
		font-family: GM
		font-size: 14px
		margin-bottom: 10px
	&-title
		font-family: GM
		font-size: 30px
		font-weight: 600
		text-transform uppercase
		span
			background-color: #cc922f
			padding 5px 5px 10px
	&-subtitle
		font-family: GM
		font-size: 35px
		font-weight: 900
		margin 50px 0
		text-transform uppercase
	&-info
		&-text
			margin-top: 5px
			span
				display inline-block
				font-weight: bold
		@media screen and (max-width 767px)
			padding 35px 15px
			&:before
				top - 27px
				left 0
				right 0
				margin 0 auto
			&:after
				margin 0 auto
				left 0
				right 0
.video-wrapper-main
	max-width 560px
	margin-top: 60px